        <description>Extending K2 with additional field types, and search and layout capability.</description>
        <files>
                <filename plugin="k2fields">k2fields.php</filename>
        </files>
        <languages folder="language">
                <language tag="en-GB">en-GB.plg_k2_k2fields.ini</language>
        </languages>
        <config>
                <fields name="params" addfieldpath="/administrator/components/com_k2fields/elements/">
                        <fieldset name="PLG_K2FIELDS_VARIOUS_DEFAULT_VALUES">
                                <field name="listmax" type="text" default="10" label="Max allowed elements of multi-valued fields (lists)" description="Max allowed elements of multi-valued fields (lists)" />
                                <field name="itemlistlimit" type="text" default="10" label="# of items in search" />
                                <field name="jpmodeitemlistlimit" type="text" default="10" label="# of items in k2item as jpajaxlist" />
                                <field name="alphafieldmaxlength" type="text" default="500" label="Max allowed characters in text fields" description="Overridable through field setting" />
                                <field name="emptysectionname" type="text" default="Additional info" label="Default section name" description="All fields without section name will be placed in this section" />
                        </fieldset>
                                
                        <fieldset name="PLG_K2FIELDS_VARIOUS_OVERRIDE_VALUES">
                                <field type="spacer" name="overridespacer" label="&lt;style type=&quot;text/css&quot;&gt;li span.spacer label {width:100% !important;} #jform_params_overridespacer-lbl { color:#fff; background:#c61f29; }&lt;/style&gt;By overriding we will be able to gain performance as we base the code on PHP native json routines and also be able to use the parameter overrides below. The disadvantage is that we can not mix these with various K2 related modules that make effort of loading K2 item model explicitly through PHP file including or requires.&lt;br/&gt;&lt;br/&gt; If you want to use these overrides please do set the [Override K2 item model] below to [Yes]" />
                                <field name="override_itemmodel" type="radio" default="0" label="Override K2 item model" description="">
                                        <option value="1">JYES</option>
                                        <option value="0">JNO</option>
                                </field>                                
                                <field name="inherit_extrafields" type="radio" default="0" label="Inherit extra fields" description="Allow categories to inherit extra fields group from the category they inherit other parameters from">
                                        <option value="1">JYES</option>
                                        <option value="0">JNO</option>
                                </field>                                
                                <field name="inheritfromcategory" type="k2fcategories" default="" label="Inherit from this category for all other categories" description="Parameters from this category will override parameters in all other categories except categories excluded below. For all categories excluded parameters will not be overriden." />
                                <field name="dontinheritcategories" type="k2fmulticategories" default="" label="Exclude to inherit the above categorys parameters for the following categories" />
                                <field name="dontinheritparams" type="k2fparams" default="" label="Exclude to inherit the following parameters" />
                        </fieldset>
                        
                        <fieldset name="PLG_K2FIELDS_LAYOUT">
                                <field name="specificLayout" type="radio" default="yes" label="Item/category specific layout" description="please refer to k2fields wiki for instruction on this powerful feature.">
                                        <option value="yes">JYES</option>
                                        <option value="no">JNO</option>
                                </field>
                                <field name="specificCSS" type="radio" default="yes" label="Item/category specific CSS" description="In your template folder locate applicable CSS file by prefixing the file with either c for category specifc or i for item specific followed by id for the either category or item.">
                                        <option value="yes">JYES</option>
                                        <option value="no">JNO</option>
                                </field>
<!--                                <field name="fieldsInsertion" type="list" default="auto" label="Insertion method" description="Insertion method. If you choose template and no template is found then we resort to auto insert.">
                                        <option value="auto">Auto insert</option>
                                        <option value="inserted">Inserted</option>
                                        <option value="template">Template</option>
                                </field>-->
                                <field name="extrafieldsposition" type="list" default="AfterDisplay" label="Field insertion position">
                                        <option value="BeforeDisplay">BeforeDisplay</option>
                                        <option value="AfterDisplay">AfterDisplay</option>
                                        <option value="AfterDisplayTitle">AfterDisplayTitle</option>
                                        <option value="BeforeDisplayContent">BeforeDisplayContent</option>
                                        <option value="AfterDisplayContent">AfterDisplayContent</option>
                                </field>
                                <field name="itemlistextrafieldsposition" type="list" default="AfterDisplay" label="Field insertion position (itemlist)">
                                        <option value="BeforeDisplay">BeforeDisplay</option>
                                        <option value="AfterDisplay">AfterDisplay</option>
                                        <option value="AfterDisplayTitle">AfterDisplayTitle</option>
                                        <option value="BeforeDisplayContent">BeforeDisplayContent</option>
                                        <option value="AfterDisplayContent">AfterDisplayContent</option>
                                </field>
                                <field name="catextrafieldsposition" type="textarea" cols="40" rows="10" default="" label="Category specific field insertion position (options see above list)" description="On each row provide: category%%position &lt;br&gt;* category = all refering to all categories or id of category to apply position for&lt;br&gt;* position is one of those available in the above drop down list" />
                                <field name="itemlistcatextrafieldsposition" type="textarea" cols="40" rows="10" default="" label="Category specific field insertion position (options see above list, itemlist)" description="On each row provide: category%%position &lt;br&gt;* category = all refering to all categories or id of category to apply position for&lt;br&gt;* position is one of those available in the above drop down list" />
                                
                                <field name="tabularlayout" type="k2fmulticategories" default="" label="Table based itemlist layout for the following categories" />
                                <field name="maplayout" type="k2fmulticategories" default="" label="Map based itemlist layout for the following categories" />
                                <field name="defaultui" type="list" default="tab" label="Default for item view">
                                        <option value="plain">Plain</option>
                                        <option value="headers">Sections with header</option>
                                        <option value="list">List</option>
                                        <option value="tab">Joomla! native tabs</option>
                                        <option value="accordion">Joomla! native sliders</option>
                                </field>
                                <field name="catsui" type="textarea" cols="40" rows="10" default="all%%tab" label="Category specific for item view" description="Available values for ui are: plain,headers,list,tab,accordion. Format on each row: category%%ui"/>
                                <field name="defaultuiitemlist" type="list" default="plain" label="Default for itemlist view">
                                        <option value="plain">Plain</option>
                                        <option value="headers">Sections with header</option>
                                        <option value="list">List</option>
                                        <option value="tab">Joomla! native tabs</option>
                                        <option value="accordion">Joomla! native sliders</option>
                                </field>        
                                <field name="catsuiitemlist" type="textarea" cols="40" rows="10" default="all%%plain" label="Category specific for itemlist view" description="Available values for ui are: plain,headers,list,tab,accordion. Format on each row: category%%ui"/>
                                <field name="defaultuimodule" type="list" default="plain" label="Default for module view">
                                        <option value="plain">Plain</option>
                                        <option value="headers">Sections with header</option>
                                        <option value="list">List</option>
                                        <option value="tab">Joomla! native tabs</option>
                                        <option value="accordion">Joomla! native sliders</option>
                                </field>        
                                <field name="catsuimodule" type="textarea" cols="40" rows="10" default="all%%plain" label="Category specific for module view" description="Available values for ui are: plain,headers,list,tab,accordion. Format on each row: category%%ui"/>
                        </fieldset>
